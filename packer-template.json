{
    "builders": [
        {
            "type": "amazon-ebsvolume",
            "region": "us-east-1",
            "ssh_username": "ubuntu",
            "instance_type": "t2.micro",
            "source_ami": "ami-012fd5eb46f56731f",
            "subnet_id": "subnet-f56acc83",
            "ssh_private_key_file": "~/.ssh/crowley.cloud/crowleycloud.pem",
            "ssh_keypair_name": "crowley.cloud",
            "ebs_volumes": [
                {
                    "volume_type": "gp2",
                    "device_name": "/dev/xvdf",
                    "delete_on_termination": false,
                    "tags": {
                        "zpool": "data",
                        "Name": "Data1"
                    },
                    "volume_size": 10
                }
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo apt update",
                "sudo apt install -y git python"
            ]
        }
    ]
}