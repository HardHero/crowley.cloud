{
    "builders": [
        {
            "type": "amazon-ebsvolume",
            "region": "us-east-1",
            "ssh_username": "ubuntu",
            "instance_type": "t2.micro",
            "source_ami": "ami-0b86cfbff176b7d3a",
            "subnet_id": "subnet-f56acc83",
            "ssh_keypair_name": "crowley.cloud",
            "ssh_private_key_file": "~/.ssh/crowley.cloud/crowleycloud.pem",
            "ebs_volumes": [
                {
                    "volume_type": "gp2",
                    "device_name": "/dev/xvdf",
                    "delete_on_termination": false,
                    "tags": {
                        "Name": "CrowleyCloud"
                    },
                    "volume_size": 10
                }
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "expect_disconnect": "true",
            "script": "packer.sh"
        },
        {
            "type": "ansible",
            "playbook_file": "site.yml"
        }
    ]
}